{
    "app-id": "io.gitlab.craigbarnes.Showdown",
    "branch": "master",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "command": "showdown",
    "rename-icon": "showdown",
    "rename-appdata-file": "io.gitlab.craigbarnes.Showdown.appdata.xml",

    "finish-args": [
        "--filesystem=host:ro",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=session-bus",

        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],

    "build-options": {
        "cflags": "-O2 -g",
        "env": {
            "MAKEFLAGS": "-j$(mk/nproc.sh)",
            "V": "1"
        }
    },

    "modules": [
        {
            "name": "libmarkdown",
            "buildsystem": "simple",
            "sources": [{
                "type": "archive",
                "url": "https://github.com/Orc/discount/archive/v2.2.6.tar.gz",
                "sha256": "40defe460dc005dbc78a4e6174fce29fca2ac3ccd5acd400c05eb713f824df97"
            }],
            "build-commands": [
                "./configure.sh --prefix=/app --shared --pkg-config",
                "make",
                "sed -e 's|/sbin/ldconfig|/sbin/ldconfig -n|' -i librarian.sh",
                "make install",
                "install -m644 libmarkdown.pc /app/lib/pkgconfig/libmarkdown.pc"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig"
            ]
        },
        {
            "name": "showdown",
            "buildsystem": "simple",
            "sources": [{
                "type": "git",
                "url": "git://github.com/craigbarnes/showdown.git",
                "branch": "master",
                "disable-shallow-clone": true
            }],
            "build-commands": [
                "make",
                "cat build/version.txt",
                "make install prefix=/app POSTINSTALL=:"
            ]
        }
    ]
}
